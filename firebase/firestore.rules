rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User-owned data: only authenticated user can access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Media items subcollection
      match /media_items/{mediaId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Goals subcollection
      match /goals/{goalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Goal logs subcollection
      match /goal_logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Plans subcollection
      match /plans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
